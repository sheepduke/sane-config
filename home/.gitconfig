[color]
    status = auto
    branch = auto
    diff = auto
    interactive = auto
    ui = auto
    pager = true

[alias]
    ad = add .
    br = branch
    co = checkout
    cm = commit -m
    cp = cherry-pick
    df = diff
    ds = diff --cached
    fa = fetch -a
    lf = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    p = push
    po = push origin
    pu = push -u origin HEAD
    re = rebase
    rs = restore
    rt = reset
    st = status --ahead-behind
    stu = status --ahead-behind -uno
    sw = switch
    wa = worktree add
    wl = worktree list
    wr = worktree remove

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    # use n and N to move between diff sections.
    navigate = true
     # set to true if you're in a terminal w/ a light background color.
     # (e.g. the default macOS terminal)
    light = true

[diff]
    colorMoved = default

[merge]
    conflictstyle = diff3
    
[include]
    path = .gituser.conf

[init]
    defaultBranch = master
