[color]
    status = auto
    branch = auto
    diff = auto
    interactive = auto
    ui = auto
    pager = true

[alias]
    ad = add .
    b = branch
    bb = switch
    bc = switch -c
    bd = branch -d
    bD = branch -D
    br = branch -r
    co = checkout
    cm = commit -m
    cp = cherry-pick
    d = diff
    ds = diff --cached
    fa = fetch -a
    m = merge
    ma = merge --abort
    mc = merge --continue
    l = log
    lf = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    r = rebase
    ra = rebase --abort
    rc = rebase --continue
    rt = reset
    rs = restore
  	s = status --ahead-behind
    p = push
    pf = push -f
    pu = push -u origin HEAD
    w = worktree list
    wa = worktree add
    wr = worktree remove

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    # use n and N to move between diff sections.
    navigate = true
     # set to true if you're in a terminal w/ a light background color.
     # (e.g. the default macOS terminal)
    light = true

[diff]
    colorMoved = default

[merge]
    conflictstyle = diff3
    
[include]
    path = .gituser.conf

[init]
    defaultBranch = master
